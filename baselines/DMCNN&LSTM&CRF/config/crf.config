[train]
epoch = 15
batch_size = 40        
shuffle = True
valid_interval = 1
save_strategy = save_best

[test]
batch_size = 40
shuffle = False

[data]
reader_name = MavenReader
formatter_name = CrfFormatter
word2vec_file = 100.utf8
sequence_length = 128
BIO = True
pad_label_id = -100

[model]
model_name = Crf
num_layers = 1
hidden_size = 400
dropout = 0.3

[optimizer]
optimizer_name = Adam
lr = 1e-3
weight_decay = 1e-8